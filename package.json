{
  "name": "styled-minimal",
  "version": "0.9.0",
  "description": "Minimal UI toolkit with styled-components",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/gilbarbara/styled-minimal.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/styled-minimal/issues"
  },
  "homepage": "https://github.com/gilbarbara/styled-minimal#readme",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "files": [
    "esm",
    "lib"
  ],
  "types": "./lib",
  "sideEffects": false,
  "keywords": [
    "react",
    "react-component",
    "styled-components",
    "ui"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0",
    "styled-components": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@styled-system/css": "^5.1.5",
    "deepmerge": "^4.2.2",
    "polished": "^3.5.0",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@gilbarbara/tsconfig": "^0.1.0",
    "@size-limit/preset-big-lib": "^4.4.0",
    "@storybook/addon-a11y": "^5.3.17",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-backgrounds": "^5.3.17",
    "@storybook/addon-docs": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-options": "^5.3.17",
    "@storybook/addon-viewport": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/components": "^5.3.17",
    "@storybook/preset-typescript": "^2.1.0",
    "@storybook/react": "^5.3.17",
    "@storybook/theming": "^5.3.17",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.2",
    "@types/react": "^16.9.25",
    "@types/styled-components": "^4.4.3",
    "@types/styled-system": "^5.1.9",
    "@types/styled-system__css": "^5.0.6",
    "@types/webpack": "^4.41.8",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "csstype": "^2.6.9",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "fork-ts-checker-webpack-plugin": "^4.1.0",
    "husky": "^4.2.3",
    "is-ci-cli": "^2.0.0",
    "jest": "^25.1.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "jest-styled-components": "^6.3.4",
    "jest-watch-typeahead": "^0.4.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react": "^16.13.1",
    "react-docgen-typescript-loader": "^3.7.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "repo-tools": "^0.2.0",
    "size-limit": "^4.4.0",
    "storybook-chromatic": "^3.5.2",
    "styled-components": "^4.4.1",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "clean": "del lib/* && del esm/*",
    "watch": "npm run build:esm && npm run build:cjs -- -w",
    "storybook:start": "start-storybook -p 9001",
    "storybook:build": "del docs/* && build-storybook -o docs",
    "storybook:test": "CHROMATIC_APP_CODE=l1lpnn23l4s chromatic --script-name=storybook:start",
    "lint": "eslint --ext .ts,.tsx src stories test",
    "lint:styles": "stylelint '(src/**/*.{ts,tsx})'",
    "format": "prettier \"**/*.{js,jsx}\" --write",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watch --verbose",
    "size": "size-limit",
    "validate": "npm run lint && npm run lint:styles && npm run test:coverage && npm run build && npm run size",
    "prepublishOnly": "npm run validate"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ],
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "22 KB"
    },
    {
      "path": "./esm/index.js",
      "limit": "20 KB"
    }
  ],
  "prettier": {
    "proseWrap": "never",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxBracketSameLine": false
  },
  "lint-staged": {
    "**/*.+(ts|tsx)": [
      "eslint",
      "jest --findRelatedTests"
    ],
    "**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-merge": "repo-tools istall-packages",
      "pre-commit": "repo-tools check-remote && lint-staged"
    }
  }
}
